<div class="item w2 lockAspect" id="item_{{ imageName }}" data-isStamped="false">  
	<div id="image_view">
		<i class="icon-cancel-circled"></i>
		<i class="icon-lock pinDiv"></i>
		<button class="small info btn prev-button"><i class="icon-left-dir"></i></button>
		<div class="image-name" ><strong> {{ imageName }} </strong></div>
		<button class="small info btn next-button"><i class="icon-right-dir"></i></button>
		<br>
		<div class="image-wrapper"> 
			<img class="display_image" src="{{ imagePath }}"></img>
		</div>
		<ul>
			<li class='summary'>
				<label class='summary_label'>Camera</label>
				{{ camera_name }}
			</li>
			<li class='summary'>
				<label class='summary_label'>Creation Time</label>
				{{ creation_time }}
			</li>
			<li class='summary'>
				<label class='summary_label'>Altitude</label>
				{{#if altitude }}{{ altitude }}{{else}}&nbsp;{{/if}}
			</li>
			<li class='summary'>
				<label class='summary_label'>Author</label>
				{{ author_name }}
			</li>
		</ul>
		<button class="small default btn" id="more_info_button"> More info </button>
	</div> 
	
	<div id="more_info_view">
		<form action="/xgds_image/updateImageInfo/" id="more_info_form" method="post">
			<fieldset>
				<ul>
					<input name="id" value="{{id}}" hidden id="id_id"></input>
					<li class='field'>
						<label class="inline" for="id_latitude">Latitude</label>
						<input class="narrow text input" type="text" name="latitude" id="id_latitude" value="{{ lat }}"></input>
					</li>
					<li class='field'>
						<label class="inline" for="id_longitude">Longitude</label>
						<input class="narrow text input" type="text" name="longitude" id="id_longitude" value="{{ lon }}"></input>
					</li>
					<li class='field'>
						<label class="inline" for="id_altitude">Altitude</label>
						<input class="narrow text input" type="text" name="altitude" id="id_altitude" value="{{ altitude }}"></input>
					</li>
					<li class='field'>
						<label class="inline" for="id_description">Description</label>
						<textarea class="input textarea" name="description" id="id_description">{{ description }}</textarea>
					</li>
					<input class="medium info btn" type="submit" value="Save" />
					<li class='field'>
						<label class="inline" id="message"></label>
					</li>
				</ul>
			</fieldset>
		</form>
	</div>
</div>