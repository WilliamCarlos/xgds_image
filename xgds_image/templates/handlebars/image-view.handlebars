<div class="item w2 lockAspect" id="item_{{ imageName }}"> 

	<div id="image_view">
		<i class="icon-cancel-circled"></i>
		
		<button class="small info btn prev-button"><i class="icon-left-dir"></i></button>
		<div class="image-name" ><strong> {{ imageName }} </strong></div>
		<button class="small info btn next-button"><i class="icon-right-dir"></i></button>
		<br>
		<div class="image-wrapper"> 
			<img src="{{ imagePath }}"></img>
		</div>
		
		<ul>
			<li>
				<label>Source</label>
				{{ source }}
			</li>
			<li>
				<label>Author</label>
				{{ author }}
			</li>
			<li>
				<label>Altitude</label>
				{{ altitude }}
			</li>
		</ul>
		<button id="more_info_button"> More info </button>
	</div> 
	
	<div id="more_info_view">
		<form action="/xgds_image/updateImageInfo/" id="more_info_form" method="post">
			<fieldset>
				<ul>
					<input name="imageId" value="{{imageId}}" hidden></input>
					<li>
						<label>Source</label>
						<select name="source">
						{{#each allSources}}
	 						<option value="{{source}}">{{source}}</option>
						{{/each}}
						</select>
					</li>
					<li>
						<label>Latitude</label>
						<input name="latitude" value="{{latitude}}"></input>
					</li>
					<li>
						<label>Longitude</label>
						<input name="longitude" value="{{longitude}}"></input>
					</li>
					<li>
						<label>Altitude</label>
						<input name="altitude" value="{{altitude}}"></input>
					</li>
					<li>
						<label>Author</label>
						<select name="author">
						{{#each allAuthors}}
	 						<option value="{{author}}">{{author}}</option>
						{{/each}}
						</select>
					</li>
					<li>
						<label>Description</label>
						<textarea name="description">{{description}}</textarea>
					</li>
					<input type="submit" value="Save" />
				</ul>
			</fieldset>
		</form>
	</div>
</div>